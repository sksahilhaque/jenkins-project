pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'chmod +x java-crud-app/build.sh'
                sh 'java-crud-app/build.sh'
            }
        }

        stage('Run with Input') {
            steps {
                sh 'chmod +x java-crud-app/run.sh'
                sh 'java-crud-app/run.sh < java-crud-app/input.txt'
            }
        }

    }
}